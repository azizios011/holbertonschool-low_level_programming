CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@
